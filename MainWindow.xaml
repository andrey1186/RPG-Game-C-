<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Menu" Background="#01bcfe"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Player Data" Background="#a6ce28"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Game Data" Background="#e7db74"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Inventory/Quests" Background="#f92453"/> 
        <Label Grid.Row="2" Grid.Column="1" Content="Combat/Movement Controls" Background="#f8f8f2"/>


    </Grid>
</Window>
